<div class="container">
  <div class="mini-banner"></div>
    <div class="row d-flex justify-content-center">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4 grid">
          <div class="card-cocktail">
            <%= link_to cocktail_path(cocktail) do %>
              <div class="card-img-thumbnail" style="background-image: url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
              </div>
            <% end %>
            <div class="card-cocktail-infos">
              <div>
                <h2><%= cocktail.name %></h2>
                <p>
                  <% if cocktail.ingredients.count > 0 %>
                    <% ingredients = [] %>
                    <% cocktail.ingredients.first(4).each do |ingredient| %>
                      <% ingredients << ingredient.name %>
                    <% end %>
                    <%= ingredients.join(", ") %>
                  <% end %>
                </p>
              </div>
              <div class="d-flex flex-row justify-content-start">
                <%= link_to new_cocktail_dose_path(cocktail) do %>
                  <i class="fas fa-plus-circle mr-3"></i>
                <% end %>
                <%= link_to cocktail_path(cocktail), method: :delete do %>
                  <i class="fas fa-trash mr-3"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
